<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
 <description>The coding standard for PHP_CodeSniffer itself.</description>
 <exclude-pattern>*/Tests/*</exclude-pattern>

 <!-- Include the whole PEAR standard -->
 <rule ref="PEAR"/>

 <!-- Include some sniffs from other standards that don't conflict with PEAR -->
 <rule ref="EpagesSquiz.Arrays.ArrayBracketSpacing" />
 <rule ref="EpagesSquiz.Arrays.ArrayDeclaration" />
 <rule ref="EpagesSquiz.Commenting.ClosingDeclarationComment" />
 <rule ref="EpagesSquiz.Commenting.BlockComment" />
 <rule ref="EpagesSquiz.Commenting.DocCommentAlignment" />
 <rule ref="EpagesSquiz.Commenting.EmptyCatchComment" />
 <rule ref="EpagesSquiz.Commenting.InlineComment" />
 <rule ref="EpagesSquiz.Commenting.LongConditionClosingComment" />
 <rule ref="EpagesSquiz.Commenting.PostStatementComment" />
 <rule ref="EpagesSquiz.Operators.ComparisonOperatorUsage" />
 <rule ref="EpagesSquiz.WhiteSpace.ControlStructureSpacing" />
 <rule ref="EpagesSquiz.WhiteSpace.FunctionClosingBraceSpace" />
 <rule ref="EpagesSquiz.WhiteSpace.FunctionSpacing" />
 <rule ref="EpagesSquiz.WhiteSpace.SuperfluousWhitespace" />
 <rule ref="EpagesGeneric.Commenting.Todo"/>
 <rule ref="EpagesGeneric.ControlStructures.InlineControlStructure"/>
 <rule ref="EpagesGeneric.Formatting.DisallowMultipleStatements"/>
 <rule ref="EpagesGeneric.Formatting.SpaceAfterCast"/>
 <rule ref="EpagesGeneric.NamingConventions.ConstructorName"/>
 <rule ref="EpagesGeneric.PHP.DeprecatedFunctions"/>
 <rule ref="EpagesGeneric.PHP.LowerCaseKeyword"/>
 <rule ref="EpagesGeneric.Strings.UnnecessaryStringConcat"/>
 <rule ref="PSR2.Files.EndFileNewline"/>
 <rule ref="EpagesZend.Files.ClosingTag"/>

 <!-- Only one argument per line in multi-line function calls -->
 <rule ref="PEAR.Functions.FunctionCallSignature">
  <properties>
   <property name="allowMultipleArguments" value="false"/>
  </properties>
 </rule>

 <!-- Have 8 chars padding maximum and always show as errors -->
 <rule ref="EpagesGeneric.Formatting.MultipleStatementAlignment">
  <properties>
   <property name="maxPadding" value="12"/>
   <property name="error" value="true"/>
  </properties>
 </rule>

 </ruleset>